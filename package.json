{
  "name": "1sol-sdk-ts",
  "version": "1.0.0",
  "description": "1sol protocol sdk",
  "main": "src/index.ts",
  "types": "types/index.d.ts",
  "author": "1sol protocol",
  "license": "MIT",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc"
  },
  "lint-staged": {
    "packages/*/{src,test}/**/*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@solana/buffer-layout": "^3.0.0",
    "@solana/web3.js": "^1.31.0",
    "bn.js": "^5.2.0",
    "bs58": "^4.0.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/bs58": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
